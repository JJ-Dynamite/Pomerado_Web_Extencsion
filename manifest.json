{
    "manifest_version": 3,
    "name": "Custom Pomodoro Timer",
    "version": "1.1",
    "description": "A customizable Pomodoro timer with a modern UI",
    "action": {
      "default_popup": "popup.html"
    },
    "permissions": [
      "alarms",
      "notifications",
      "storage"
    ],
    "background": {
      "service_worker": "background.js"
    }
  }